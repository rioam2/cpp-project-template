{
  "version": 6,
  "configurePresets": [
    {
      "name": "clang",
      "hidden": true,
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      },
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libc++"
      }
    },
    {
      "name": "x86-clang",
      "hidden": true,
      "inherits": "clang",
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-m32",
        "CMAKE_CXX_FLAGS": "-m32"
      }
    }
  ]
}
